<span>
    {{#if isLogged}}
    {{i18n 'Your are logged. Logout first'}}
    {{else}}

        {{#if loginError}}
            <div class="alert alert-danger text-center" id="success-danger" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            {{#i18n}}{{loginError}}{{/i18n}}<br>
            </div>
        {{/if}}

        <div class="container">
            <div class="row center-row">
                <div class="col-lg-6 center-block-login">
                    <div id="subtitleLogin">
                        <a class="navbar-brand" href="#"><img src="/meetPoll_TSW/img/logo.png" alt="logo" class="logoLogin"></a>
                        <h5><br>{{i18n 'Sign in to MeetPoll'}}</h5>
                    </div>
                    <div class="col-lg-12 center-block2">
                            <div id="inputLogin">
                                <div class="inputWithIconLogin inputIconBg">
                                    <input type="text" id="username" placeholder="{{i18n 'Username'}}" required>
                                    <i class="fa fa-user fa-lg fa-fw" aria-hidden="true"></i>
                                </div>
                                <div class="inputWithIconLogin inputIconBg">
                                    <input type="password" id="passwd" placeholder="{{i18n 'Password'}}" required>
                                    <i class="fa fa-lock fa-lg fa-fw" aria-hidden="true"></i>
                                </div>
                                <button type="submit" id="loginbutton" class="loginButton btn btn-darkLogin">{{i18n 'Sign in'}}</button>
                            </div>
                        <div id="loginPerdidaDeDatos">
                        {{i18n 'New to MeetPoll? '}}<a class="font-weight-light" href="">{{i18n 'Create an account.'}}</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/if}}
</span>



