<span>
    {{#if isLogged}}
        {{i18n 'Your are logged. Logout first'}}
    {{else}}
        <div class="container">
            <div class="row center-row">
                <div class="col-lg-6 center-block-login">
                    <div id="subtitleLogin">
                        <a class="navbar-brand" href="#"><img src="/meetPoll_TSW/img/logo.png" alt="logo" class="logoLogin"></a>
                        <h5><br>{{i18n 'Sign in to MeetPoll'}}</h5>
                    </div>
                    <div class="col-lg-12 center-block2">
                        <div id="inputLogin">
                            <div class="inputWithIconLogin inputIconBg">
                                <input type="text" id="username" placeholder="{{i18n 'Username'}}">
                                <i class="fa fa-user fa-lg fa-fw" aria-hidden="true"></i>
                            </div>
                                {{#if loginError.username}}
                                    <div class="alert alert-danger text-center" id="success-danger" role="alert">
                                        {{#i18n}}{{loginError.username}}{{/i18n}}<br>
                                    </div>
                                {{/if}}
                            <div class="inputWithIconLogin inputIconBg">
                                <input type="password" id="passwd" placeholder="{{i18n 'Password'}}">
                                <i class="fa fa-lock fa-lg fa-fw" aria-hidden="true"></i>
                            </div>
                                {{#if loginError.passwd}}
                                    <div class="alert alert-danger text-center" id="success-danger" role="alert">
                                        {{#i18n}}{{loginError.passwd}}{{/i18n}}<br>
                                    </div>
                                {{/if}}
                            {{#if registerMode}}
                                <div class="inputWithIconLogin inputIconBg">
                                    <input type="password" id="confirmPasswd" placeholder="{{i18n 'Confirm the password'}}">
                                    <i class="fa fa-lock fa-lg fa-fw" aria-hidden="true"></i>
                                </div>
                                {{#if loginError.confirmPasswd}}
                                    <div class="alert alert-danger text-center" id="success-danger" role="alert">
                                        {{#i18n}}{{loginError.confirmPasswd}}{{/i18n}}<br>
                                    </div>
                                {{/if}}
                                <button type="submit" id="registerbutton" class="loginButton btn btn-darkLogin">{{i18n 'Register'}}</button>
                            {{else}}
                                <button type="submit" id="loginbutton" class="loginButton btn btn-darkLogin">{{i18n 'Sign in'}}</button>
                                {{i18n 'New to MeetPoll? '}}<a id="registerlink" class="font-weight-light" href="">{{i18n 'Create an account.'}}</a>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/if}}
</span>




