



<div class="container">

    <div class="row center-row">
        <div class="col-lg-12 center-block">
            {{#if errors}}
                <div class="alert alert-danger text-center" id="success-danger" role="alert">
                    <button type="button" id="add-row-button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{errorrs}}
                </div>
            {{/if}}
            <div id="subtitle">
                {{i18n 'What free days do you have?'}}
            </div>
            <div id="link">
                <div id="inputLink" class="inputWithIconLogin inputIconBg">
                    <input type="hidden" id="poll-link" value="{{polls.selectedPoll.link}}" readonly>
                </div>
            </div>
            <div class="col-lg-12 center-block2">
                <table id="dataTable" class="table text-center">
                    <thead>
                        <tr>
                            <th scope="col"><button type="button" class="btn btn-success" id="addrow-button" value="+">+</button></th>
                            <th scope="col">{{i18n 'Date'}}</th>
                            <th scope="col">{{i18n 'Start'}}</th>
                            <th scope="col">{{i18n 'End'}}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#if selectedGap}}
                            {{#each selectedGap as |gap|}}
                                {{#each gap as |item|}}
                                    <tr>
                                        <td></td>
                                        <td>
                                            <div class="inputDate">
                                                <div class="inputWithIconLogin inputIconBg">
                                                    <input type="text" id="date-es{{item.id}}" class ="date" value="{{item.date}}" required>
                                                    <i class="fa fa-calendar fa-lg fa-fw" aria-hidden="true"></i>
                                                </div>
                                            </div>
                                        </td>

                                        <td>
                                            <div class="inputTime">
                                                <div class="inputWithIconLogin inputIconBg">
                                                    <input type="text" id="timeStart{{item.id}}" class="timeStart" value="{{item.timeStart}}" required>
                                                    <i class="fa fa-clock-o fa-lg fa-fw" aria-hidden="true"></i>
                                                </div>
                                            </div>
                                        </td>

                                        <td>
                                            <div class="inputTime">
                                                <div class="inputWithIconLogin inputIconBg">
                                                    <input type="text" id="timeEnd{{item.id}}" class="timeEnd" value="{{item.timeEnd}}" required>
                                                    <i class="fa fa-clock-o fa-lg fa-fw" aria-hidden="true"></i>    
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                {{/each}}
                            {{/each}} 
                        {{/if}}
                    </tbody>
                </table>
                <input type="hidden" id="gaps"> 
                <button type="submit" id="savebutton" class="btn btn-dark" onclick="valueData()">{{i18n 'Continue'}}</button>
            </div>
        </div>
    </div>
</div>