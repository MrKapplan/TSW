



<div class="container">

    <div class="row center-row">
        <div class="col-lg-12 center-block">
            {{#if errors}}
                <div class="alert alert-danger text-center" id="success-danger" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{errorrs}}
                </div>
            {{/if}}
            <div id="subtitle">
                {{i18n 'What free days do you have?'}}
            </div>
            <div id="link">
                <div id="inputLink" class="inputWithIconLogin inputIconBg">
                    <input type="text" placeholder="{{selectedPoll.link}}" readonly>
                    <i class="fa fa-link fa-lg fa-fw" aria-hidden="true"></i>
                </div>
            </div>
            <div class="col-lg-12 center-block2">
                <table id="dataTable" class="table text-center">
                    <thead>
                        <tr>
                            <th scope="col"><button type="button" class="btn btn-success" id="botonAÃ±adir" value="+"  onclick="addRow('dataTable');">+</button></th>
                            <th scope="col">{{i18n 'Date'}}</th>
                            <th scope="col">{{i18n 'Start'}}</th>
                            <th scope="col">{{i18n 'End'}}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each selectedGap as |gap|}}
                        <tr>
                            <td></td>
                            <td>
                                <div id="inputDate">
                                    <div class="inputWithIconLogin inputIconBg">
                                        <input type="text" id="date-es" class ="date" value="{{gap.date}}" required>
                                        <i class="fa fa-calendar fa-lg fa-fw" aria-hidden="true"></i>
                                    </div>
                                </div>
                            </td>

                            <td>
                                <div id="inputTimeStart">
                                    <div class="inputWithIconLogin inputIconBg">
                                        <input type="text" id="timeStart" class="timeStart" value="{{gap.timeStart}}" required>
                                        <i class="fa fa-clock-o fa-lg fa-fw" aria-hidden="true"></i>
                                    </div>
                                </div>
                            </td>

                            <td>
                                <div id="inputTimeEnd">
                                    <div class="inputWithIconLogin inputIconBg">
                                        <input type="text" id="timeEnd" class="timeEnd" value="{{gap.timeEnd}}" required>
                                        <i class="fa fa-clock-o fa-lg fa-fw" aria-hidden="true"></i>    
                                    </div>
                                </div>
                            </td>
                        </tr> 
                        {{/each}}
                    </tbody>
                </table>
                <input type="hidden" id="gaps"> 
                <button type="submit" id="savebutton" class="btn btn-dark" onclick="valueData()">{{i18n 'Continue'}}</button>
            </div>
        </div>
    </div>
</div>