<div class="container">
    <div class="row center-row">
        <div class="col-lg-12 center-block">
            <div id="subtitleView">
				      {{selectedPoll.title}}
            </div>
            <div id="subsubtitle">
                {{i18n "by "}}{{selectedPoll.author}} {{#if selectedPoll.ubication}} {{i18n " - "}}{{i18n "At "}}{{selectedPoll.ubication}} {{/if}}
            </div>
            <div id="link">
                <div id="inputLink" class="inputWithIconLogin inputIconBg">
                    <input type="text" placeholder="http://localhost/meetPoll_TSW/frontend/index.html#view-poll?link={{selectedPoll.link}}" readonly>
                     <i class="fa fa-link fa-lg fa-fw" aria-hidden="true"></i>
                </div>
            </div>
             <div class="col-lg-12 center-block2">
                    {{#if_eq gaps.selectedGap.length 0}}
                        <div id="messageView">
                            {{i18n "There are not gaps!" }}
                            {{#if_eq selectedPoll.author user.currentUser}}
                                {{i18n "Add it "}} <a href="#add-gaps?link={{selectedPoll.link}}" item="{{selectedPoll.link}}"> {{i18n "here"}} </a>
                            {{/if_eq}}
                        </div>
                    {{else if_eq assignations.selectedAssignation.length 0}}
                        <div id="messageView">
                            {{i18n "There are not participations! Be the first to do it!"}}
                        </div>
                    {{/if_eq}}

                    {{#if_max assignations.selectedAssignation.length 0}}
                        <table id="dataTable" class="table text-center">
                            <thead>
                                <tr>
                                    <th></th>
                                    {{#each assignations.selectedParticipants}}
                                        {{#each this}}
                                            {{#if_eq this user.currentUser}}
                                                <th id="{{user.currentUser}}" scope="col"> {{i18n "You"}}</th>
                                            {{else }}
                                                <th id="{{this}}" scope="col"> {{this}} </th>
                                            {{/if_eq}}
                                         {{/each}}
                                    {{/each}}
                                </tr>
                            </thead>
                             <tbody>
                                {{#each gaps.selectedGap as |gap|}}
                                    <tr id="gap-item-{{gap.id}}">
                                        <td>
                                            <div id="gap-date-item-{{gap.id}}" class="ytitle"> </div>
                                            <div id="gap-time-item-{{gap.id}}" class="ysubtitle">{{gap.[timeStart]}} - {{gap.[timeEnd]}} </div>
                                        </td>
                                {{/each}} 


                                        
                                       {{#each assignations.selectedAssignation as |assignation|}}
                                           {{!-- {{assignation.username}} --}}
                                            {{#each assignations.selectedParticipants as |participant|}} 
                                                 {{assignation.username}} {{participant.username}}
                                             {{/each}}
                                        {{/each}}  



                                  

                                        {{!-- <?php foreach ($participants as $user): 
                                            $isAssignated=false; ?>
                                            <?php foreach($assignations as $assignation):
                                                if($assignation->getUser()->getUsername() == $user->getUser()->getUsername() && $assignation->getGap()->getId() == $gap->getId()):
                                                    $isAssignated=true;
                                                endif;
                                            endforeach;
