                                                <td><label class="checkbox">
                                                <input type="checkbox"  onclick="return false;" />
                                                </label></td>
                                            <?php endif; ?>
                                        <?php endforeach; ?> --}}
                                    </tr>  
                                {{!-- {{/each}} --}}
                            </tbody> 
                        </table>
                    {{/if_max}}
                {{!-- <script>checkboxes();</script>  --}}
                {{!-- <a href="./index.php?controller=polls&action=index"><?= i18n("Back") ?></a> --}}


                {{#if_eq assignations.selectedIsParticipant true}}
                    <button id="modifyParticipation-button" type="submit" class="btn btn-dark">{{i18n "Modify Participation"}}</button>
                {{else}}
                    <button id="addParticipation-button" type="submit" class="btn btn-dark">{{i18n "Take part"}}</button>
                {{/if_eq}}

            </div>
        </div>
    </div>
</div>